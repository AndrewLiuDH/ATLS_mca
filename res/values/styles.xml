<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

     <style name="CustomWindowTitleBackground">
        <item name="android:background">#BFBFBF</item>
    </style>
    
    <style name="title_style" parent="android:Theme">
        <item name="android:windowTitleSize">44dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>
    
     <style name="lbl_msg_style">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:textColor">#6d6d6d</item>
    </style>

    <style name="field_value_style">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#12A8AC</item>
        <item name="android:paddingLeft">2.0dip</item>
    </style>
    
    
    
    
</resources>
